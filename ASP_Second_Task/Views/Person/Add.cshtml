@model ASP_Second_Task.Models.PersonViewModel;
@{
	Layout = null;
}



<!DOCTYPE html>

<html>

<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>


<body>

	<form style=" position: absolute;
    top: 50%;
    left: 44%;
    margin-top: -50px;
    margin-left: -50px;
    width: 300px;
    height: 100px;"
	
	asp-controller="Person" asp-action="Add" method="post"
	>
	<h3 style="text-align:center;margin:auto;">Add A Person</h3>
		<div style="margin:15px;"  class="form-floating">
			<input asp-for="Person.Name" class="form-control" id="floatingInput" placeholder="Enter Name">
			<label>Enter Name</label>
		</div>
		<div style="margin:15px;" class="form-floating">
			<input asp-for="Person.Surname" class="form-control" id="floatingPassword" placeholder="Enter Surname">
			<label>Enter Surname</label>
		</div>
		<div style="margin:15px;" class="form-floating">
			<input asp-for="Person.Age" class="form-control" id="floatingPassword" placeholder="Enter Age">
			<label >Enter Age</label>
		</div>
		<div style="margin:15px;text-align:center;margin:auto;" class="form-floating">
			<button type="submit" class="btn btn-primary">ADD</button>
		</div>
	</form>



</body>

</html>